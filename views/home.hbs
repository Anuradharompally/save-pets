<div class="row mt-4 ml-3 mr-3 mb-5">
  {{#each pets}}
  <div class="col-md-4 col-xl-3 col-lg-4 col-sm-6 mb-5">
    <div class="card">
      <img src="{{this.url}}" id="cardImg" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">Age: {{this.age}}</p>
        <p class="card-text">Breed: {{this.breeds}}</p>
      </div>
      <div class="card-footer">
        <a href="/petprofile/{{this._id}}" class="btn btn-sm mx-2 detailsBtn">Details</a>
        {{#if this.requested}}
        <span class="text-info">Request sent</span>
        {{else}}
        <a class="btn btn-sm btn-outline-primary mx-2 btn-adopt" value="{{this._id}}" href="#">Adopt</a>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>
<script>
  $('#login').on('click', function () {
    window.location.replace('/login');
  })
  $('#signup').on('click', function () {
    window.location.replace('/signup')
  })
  $('.likeBtn').on('click', function () {
    $(this).css('color', 'red')
  })
</script>